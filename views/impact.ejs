<%- include('partials/header') %>

    <!-- Page Header -->
    <section class="page-header bg-primary text-white py-5 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mx-auto text-center">
                    <h1 class="display-4 fw-bold">Our Impact</h1>
                    <p class="lead">Measuring our success through positive change</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Key Statistics -->
    <section class="py-5">
        <div class="container">
            <h2 class="text-center display-5 fw-bold mb-5">Key Statistics</h2>
            <div class="row text-center">
                <div class="col-md-3 col-6 mb-4">
                    <div class="stat-card p-4 bg-light rounded">
                        <i class="fas fa-project-diagram fa-3x text-primary mb-3"></i>
                        <h3 class="display-4 fw-bold"><%= totals.total_projects || 0 %></h3>
                        <p class="lead">Projects Completed</p>
                    </div>
                </div>
                <div class="col-md-3 col-6 mb-4">
                    <div class="stat-card p-4 bg-light rounded">
                        <i class="fas fa-users fa-3x text-success mb-3"></i>
                        <h3 class="display-4 fw-bold"><%= totals.total_beneficiaries || 0 %></h3>
                        <p class="lead">People Helped</p>
                    </div>
                </div>
                <div class="col-md-3 col-6 mb-4">
                    <div class="stat-card p-4 bg-light rounded">
                        <i class="fas fa-check-circle fa-3x text-warning mb-3"></i>
                        <h3 class="display-4 fw-bold"><%= totals.active_projects || 0 %></h3>
                        <p class="lead">Active Projects</p>
                    </div>
                </div>
                <div class="col-md-3 col-6 mb-4">
                    <div class="stat-card p-4 bg-light rounded">
                        <i class="fas fa-map-marked-alt fa-3x text-info mb-3"></i>
                        <h3 class="display-4 fw-bold"><%= locationStats.length || 0 %></h3>
                        <p class="lead">Locations</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Project Locations -->
    <% if (locationStats && locationStats.length > 0) { %>
    <section class="py-5 bg-light">
        <div class="container">
            <h2 class="text-center display-5 fw-bold mb-5">Impact by Location</h2>
            <div class="row">
                <% locationStats.forEach(location => { %>
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm border-0 h-100">
                        <div class="card-body">
                            <h5 class="fw-bold text-primary">
                                <i class="fas fa-map-marker-alt me-2"></i><%= location.location %>
                            </h5>
                            <p class="mb-1"><strong>Projects:</strong> <%= location.project_count %></p>
                            <p class="mb-0"><strong>Beneficiaries:</strong> <%= location.total_beneficiaries %></p>
                        </div>
                    </div>
                </div>
                <% }); %>
            </div>
        </div>
    </section>
    <% } %>

    <!-- All Projects -->
    <section class="py-5">
        <div class="container">
            <h2 class="text-center display-5 fw-bold mb-5">Our Projects</h2>
            <% if (projects && projects.length > 0) { %>
                <div class="row">
                    <% projects.forEach(project => { %>
                    <div class="col-md-6 mb-4">
                        <div class="card shadow-sm border-0 h-100">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <span class="badge bg-<%= project.status === 'Active' ? 'success' : 'secondary' %>">
                                        <%= project.status %>
                                    </span>
                                    <small class="text-muted">
                                        <i class="fas fa-users me-1"></i><%= project.beneficiaries %> beneficiaries
                                    </small>
                                </div>
                                <h5 class="fw-bold"><%= project.title %></h5>
                                <p class="text-muted mb-2">
                                    <i class="fas fa-map-marker-alt me-1"></i><%= project.location %>
                                </p>
                                <p class="card-text"><%= project.description %></p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <% if (project.start_date) { %>
                                    <small class="text-muted">
                                        <i class="fas fa-calendar me-1"></i>
                                        Started: <%= new Date(project.start_date).toLocaleDateString() %>
                                    </small>
                                    <% } %>
                                    <% if (project.end_date) { %>
                                    <small class="text-muted">
                                        Completed: <%= new Date(project.end_date).toLocaleDateString() %>
                                    </small>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }); %>
                </div>
            <% } else { %>
                <div class="text-center">
                    <p class="lead">No projects to display at this time.</p>
                </div>
            <% } %>
        </div>
    </section>

    <!-- Case Studies -->
    <section class="py-5 bg-light">
        <div class="container">
            <h2 class="text-center display-5 fw-bold mb-5">Success Stories</h2>
            <div class="row">
                <div class="col-md-6 mb-4">
                    <div class="card shadow-sm border-0 h-100">
                        <div class="card-body p-4">
                            <h5 class="fw-bold text-primary mb-3">Education Transformation</h5>
                            <p>Through our education support program, we've provided learning materials and infrastructure to over 500 students in rural schools, resulting in improved academic performance and increased enrollment rates.</p>
                            <p class="mb-0">
                                <strong>Impact:</strong> 500+ students, 10 schools, 95% attendance rate
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 mb-4">
                    <div class="card shadow-sm border-0 h-100">
                        <div class="card-body p-4">
                            <h5 class="fw-bold text-primary mb-3">Clean Water Access</h5>
                            <p>Our clean water initiative has installed wells in remote villages, providing safe drinking water to over 1,000 people and significantly reducing waterborne diseases in the communities we serve.</p>
                            <p class="mb-0">
                                <strong>Impact:</strong> 1,000+ beneficiaries, 5 wells, 80% disease reduction
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Download Impact Report -->
    <section class="py-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mx-auto text-center">
                    <h2 class="display-5 fw-bold mb-4">Annual Impact Report</h2>
                    <p class="lead mb-4">Download our comprehensive impact report to learn more about our work and achievements.</p>
                    <a href="#" class="btn btn-primary btn-lg">
                        <i class="fas fa-download me-2"></i>Download Impact Report (PDF)
                    </a>
                </div>
            </div>
        </div>
    </section>

<%- include('partials/footer') %>

