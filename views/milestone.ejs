<!-- Milestone Content -->
<section class="py-5">
  <div class="container">
    <div class="row">
      <!-- Main Content -->
      <div class="col-lg-8">
        <!-- Description -->
        <div class="mb-5">
          <h2 class="section-title-sm mb-4">About This Event</h2>
          <%- milestone.fullDescription %>
        </div>

        <!-- Photo Gallery -->
        <div class="mb-5">
          <h2 class="section-title-sm mb-4">Photo Gallery</h2>
          <div class="gallery-grid">
            <% milestone.images.forEach((image, index) => { %>
              <div class="gallery-item" onclick="openMilestoneGallery(<%= index %>)">
                <img src="<%= image %>" alt="<%= milestone.title %> - Photo <%= index + 1 %>" loading="lazy">
                <div class="gallery-overlay">
                  <i class="fas fa-search-plus"></i>
                </div>
              </div>
            <% }) %>
          </div>
        </div>

        <% if (milestone.video) { %>
        <!-- Video Section -->
        <div class="mb-5">
          <h2 class="section-title-sm mb-4">Event Video</h2>
          <div class="video-wrapper">
            <iframe src="<%= milestone.video %>" frameborder="0" allowfullscreen></iframe>
          </div>
        </div>
        <% } %>
      </div>

      <!-- Sidebar -->
      <div class="col-lg-4">
        <!-- Highlights Card -->
        <div class="card mb-4" style="border: none; box-shadow: 0 5px 20px rgba(0,0,0,0.1);">
          <div class="card-header" style="background: var(--primary-yellow); border: none;">
            <h5 class="mb-0 fw-bold">Event Highlights</h5>
          </div>
          <div class="card-body">
            <ul class="list-unstyled mb-0">
              <% milestone.highlights.forEach(highlight => { %>
                <li class="mb-3 d-flex align-items-center">
                  <span style="width: 30px; height: 30px; background: var(--primary-yellow); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin-right: 12px;">
                    <i class="fas fa-check" style="font-size: 12px;"></i>
                  </span>
                  <%= highlight %>
                </li>
              <% }) %>
            </ul>
          </div>
        </div>

        <!-- Event Details Card -->
        <div class="card mb-4" style="border: none; box-shadow: 0 5px 20px rgba(0,0,0,0.1);">
          <div class="card-header" style="background: var(--primary-black); color: white; border: none;">
            <h5 class="mb-0 fw-bold">Event Details</h5>
          </div>
          <div class="card-body">
            <p class="mb-3">
              <strong><i class="fas fa-calendar-alt me-2" style="color: var(--primary-yellow);"></i>Date:</strong><br>
              <%= milestone.date %>
            </p>
            <p class="mb-3">
              <strong><i class="fas fa-map-marker-alt me-2" style="color: var(--primary-red);"></i>Location:</strong><br>
              <%= milestone.location %>
            </p>
            <p class="mb-0">
              <strong><i class="fas fa-info-circle me-2" style="color: var(--primary-black);"></i>Status:</strong><br>
              <% if (milestone.status === 'upcoming') { %>
