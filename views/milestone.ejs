    </div>
  </div>
</section>

<!-- Gallery Lightbox -->
<div id="milestone-lightbox" class="lightbox">
  <button class="lightbox-close" onclick="closeMilestoneLightbox()">&times;</button>
  <button class="lightbox-arrow lightbox-prev" onclick="navigateMilestoneLightbox(-1)">&#10094;</button>
  <img class="lightbox-image" id="milestone-lightbox-img" src="" alt="Gallery Image">
  <button class="lightbox-arrow lightbox-next" onclick="navigateMilestoneLightbox(1)">&#10095;</button>
  <div class="lightbox-counter" id="milestone-lightbox-counter"></div>
</div>

<script>
  (function() {
    // Milestone gallery lightbox - IIFE to avoid conflicts
    var milestoneImages = <%- JSON.stringify(milestone.images) %>;
    var currentMilestoneImage = 0;
    
    // Make functions global so onclick can access them
    window.openMilestoneGallery = function(index) {
      console.log('Opening gallery at index:', index);
      currentMilestoneImage = index;
      var lightbox = document.getElementById('milestone-lightbox');
      var img = document.getElementById('milestone-lightbox-img');
      var counter = document.getElementById('milestone-lightbox-counter');
      
      if (!lightbox || !img) {
        console.error('Lightbox elements not found');
        return;
      }
      
      img.src = milestoneImages[index];
      counter.textContent = (index + 1) + ' / ' + milestoneImages.length;
      lightbox.classList.add('active');
      document.body.style.overflow = 'hidden';
    };

    window.closeMilestoneLightbox = function() {
      var lightbox = document.getElementById('milestone-lightbox');
      if (lightbox) {
        lightbox.classList.remove('active');
        document.body.style.overflow = '';
      }
    };

    window.navigateMilestoneLightbox = function(direction) {
      var img = document.getElementById('milestone-lightbox-img');
      var counter = document.getElementById('milestone-lightbox-counter');
      
      if (!img) return;
      
      // Calculate next image index
      var nextIndex = currentMilestoneImage + direction;
      if (nextIndex >= milestoneImages.length) nextIndex = 0;
      if (nextIndex < 0) nextIndex = milestoneImages.length - 1;
      
      // Remove existing animation classes and force reflow
      img.classList.remove('slide-left', 'slide-right');
      img.offsetHeight; // Force reflow
      
      // Add animation class based on direction
      img.classList.add(direction > 0 ? 'slide-left' : 'slide-right');
      
      // Update image and counter
      currentMilestoneImage = nextIndex;
      img.src = milestoneImages[currentMilestoneImage];
      counter.textContent = (currentMilestoneImage + 1) + ' / ' + milestoneImages.length;
    };

    // Keyboard navigation
    document.addEventListener('keydown', function(e) {
      var lightbox = document.getElementById('milestone-lightbox');
      if (!lightbox || !lightbox.classList.contains('active')) return;
      
      if (e.key === 'Escape') window.closeMilestoneLightbox();
      if (e.key === 'ArrowLeft') window.navigateMilestoneLightbox(-1);
      if (e.key === 'ArrowRight') window.navigateMilestoneLightbox(1);
    });

    // Close on backdrop click
    document.getElementById('milestone-lightbox').addEventListener('click', function(e) {
      if (e.target === this) window.closeMilestoneLightbox();
    });
    
    console.log('Milestone lightbox initialized with', milestoneImages.length, 'images');
  })();
</script>

