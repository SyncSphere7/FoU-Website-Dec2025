<%- include('partials/header') %>

    <!-- Hero Section -->
    <section class="hero-section">
        <div class="hero-overlay" style="background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('https://images.unsplash.com/photo-1489392191049-fc10c97e64b6?w=1920') center/cover;"></div>
        <div class="container hero-content">
            <h1 class="display-2 fw-bold text-white mb-4 animate-fade-in">
                Our nation, <span class="text-gradient d-block mt-2">Our shared responsibility.</span>
            </h1>
            <p class="lead text-white mb-5 animate-fade-in" style="max-width: 900px; margin: 0 auto; font-size: 1.5rem; opacity: 0.95;">
                A transformative, citizen-driven national initiative fostering sustainable peace, unity, and national preservation across Uganda.
            </p>
            <div class="d-flex flex-column flex-sm-row gap-3 justify-content-center animate-fade-in">
                <a href="/register" class="btn btn-lg btn-custom btn-custom-primary" style="font-size: 1.1rem; padding: 14px 36px;">
                    Join the Movement
                    <i class="fas fa-arrow-right ms-2"></i>
                </a>
                <a href="/about" class="btn btn-lg btn-custom btn-custom-outline" style="font-size: 1.1rem; padding: 14px 36px;">
                    Learn More
                </a>
            </div>
        </div>
    </section>

    <!-- Impact Stats -->
    <section class="impact-stats">
        <div class="container">
            <div class="row g-4">
                <div class="col-6 col-md-3">
                    <div class="stat-card hover-lift">
                        <i class="fas fa-users stat-icon"></i>
                        <div class="stat-value"><%= stats.total_members >= 50000 ? '50,000+' : (stats.total_members || 0) %></div>
                        <div class="stat-label">Lives Impacted</div>
                    </div>
                </div>
                <div class="col-6 col-md-3">
                    <div class="stat-card hover-lift">
                        <i class="fas fa-bullseye stat-icon"></i>
                        <div class="stat-value"><%= stats.active_projects >= 120 ? '120+' : (stats.active_projects || 0) %></div>
                        <div class="stat-label">Active Projects</div>
                    </div>
                </div>
                <div class="col-6 col-md-3">
                    <div class="stat-card hover-lift">
                        <i class="fas fa-heart stat-icon"></i>
                        <div class="stat-value"><%= stats.peace_ambassadors >= 1500 ? '1,500+' : (stats.peace_ambassadors || 0) %></div>
                        <div class="stat-label">Volunteers</div>
                    </div>
                </div>
                <div class="col-6 col-md-3">
                    <div class="stat-card hover-lift">
                        <i class="fas fa-chart-line stat-icon"></i>
                        <div class="stat-value">85%</div>
                        <div class="stat-label">Success Rate</div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Mission Statement -->
    <section class="section">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mx-auto">
                    <h2 class="section-title">Our Mission</h2>
                    <p class="section-subtitle">
                        To systematically promote a culture of peace, active tolerance, and patriotic responsibility among all Ugandans through strategic advocacy, inclusive cross-party dialogue, grassroots mobilization, and citizen-led national preservation campaigns.
                    </p>
                </div>
            </div>
        </div>
    </section>

    <!-- Featured Projects -->
    <section class="section bg-muted">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="section-title">Our Impact Areas</h2>
                <p class="section-subtitle">
                    Creating meaningful change across multiple sectors to build stronger, more unified communities.
                </p>
            </div>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="card-modern hover-lift">
                        <div class="card-image" style="background: linear-gradient(rgba(217, 0, 0, 0.3), rgba(217, 0, 0, 0.3)), url('https://images.unsplash.com/photo-1529693662653-9d480530a697?w=800') center/cover;"></div>
                        <div class="p-4">
                            <h3 class="h4 fw-bold mb-3">Peace & Unity</h3>
                            <p class="text-muted mb-3">Promoting dialogue, reconciliation, and peaceful coexistence among all Ugandans.</p>
                            <a href="/impact" class="text-decoration-none fw-semibold" style="color: var(--accent);">
                                Learn More <i class="fas fa-arrow-right ms-2"></i>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card-modern hover-lift">
                        <div class="card-image" style="background: linear-gradient(rgba(217, 0, 0, 0.3), rgba(217, 0, 0, 0.3)), url('https://images.unsplash.com/photo-1488521787991-ed7bbaae773c?w=800') center/cover;"></div>
                        <div class="p-4">
                            <h3 class="h4 fw-bold mb-3">Community Engagement</h3>
                            <p class="text-muted mb-3">Building grassroots movements and empowering local peace ambassadors.</p>
                            <a href="/community" class="text-decoration-none fw-semibold" style="color: var(--accent);">
                                Learn More <i class="fas fa-arrow-right ms-2"></i>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card-modern hover-lift">
                        <div class="card-image" style="background: linear-gradient(rgba(217, 0, 0, 0.3), rgba(217, 0, 0, 0.3)), url('https://images.unsplash.com/photo-1591084728795-1149f32d9866?w=800') center/cover;"></div>
                        <div class="p-4">
                            <h3 class="h4 fw-bold mb-3">National Preservation</h3>
                            <p class="text-muted mb-3">Safeguarding Uganda's future through patriotic responsibility and civic action.</p>
                            <a href="/mission" class="text-decoration-none fw-semibold" style="color: var(--accent);">
                                Learn More <i class="fas fa-arrow-right ms-2"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Call to Action -->
    <section class="cta-section">
        <div class="container text-center">
            <h2 class="display-4 fw-bold mb-4 text-white">Join Us in Making a Difference</h2>
            <p class="lead mb-5 text-white" style="max-width: 800px; margin: 0 auto 2rem; opacity: 0.95;">
                Your support can transform our nation. Whether through membership, volunteering, or spreading the message of peace, every action counts.
            </p>
            <div class="d-flex flex-column flex-sm-row gap-3 justify-content-center">
                <a href="/register" class="btn btn-lg btn-custom btn-custom-primary" style="font-size: 1.1rem; padding: 14px 36px;">
                    Become a Member
                </a>
                <a href="/register" class="btn btn-lg btn-custom btn-custom-outline" style="font-size: 1.1rem; padding: 14px 36px;">
                    Become a Volunteer
                </a>
            </div>
        </div>
    </section>

<%- include('partials/footer') %>
