<%- include('partials/header') %>

    <!-- Hero Banner -->
    <section class="hero-banner">
        <div class="hero-overlay"></div>
        <div class="container">
            <div class="row align-items-center min-vh-100">
                <div class="col-lg-8 mx-auto text-center text-white">
                    <h1 class="display-3 fw-bold mb-4 animate-fade-in">Friends of Uganda</h1>
                    <p class="lead mb-4 animate-fade-in-delay">Our nation, Our shared responsibility</p>
                    <p class="mb-5 animate-fade-in-delay-2">A transformative, citizen-driven national initiative fostering sustainable peace, unity, and national preservation during Uganda's 2026 electoral cycle and beyond.</p>
                    <a href="/register" class="btn btn-lg px-5 py-3 animate-fade-in-delay-3 bg-brand-yellow text-brand-black" style="font-weight: 600; border: none;">
                        <i class="fas fa-user-plus me-2"></i>Join Us Today
                    </a>
                </div>
            </div>
        </div>
    </section>

    <!-- Mission Statement -->
    <section class="py-5 bg-light">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mx-auto text-center">
                    <h2 class="display-5 fw-bold mb-4">Our Mission</h2>
                    <p class="lead">To systematically promote a culture of peace, active tolerance, and patriotic responsibility among all Ugandans through strategic advocacy, inclusive cross-party dialogue, grassroots mobilization, and citizen-led national preservation campaigns.</p>
                    <a href="/mission" class="btn btn-primary btn-lg mt-3">Learn More About Our Mission</a>
                </div>
            </div>
        </div>
    </section>

    <!-- Impact Statistics -->
    <section class="py-5 bg-primary text-white">
        <div class="container">
            <div class="row text-center">
                <div class="col-md-3 mb-4 mb-md-0">
                    <div class="stat-card">
                        <i class="fas fa-user-shield fa-3x mb-3"></i>
                        <h3 class="display-4 fw-bold"><%= stats.peace_ambassadors || 0 %></h3>
                        <p class="lead">Peace Ambassadors</p>
                    </div>
                </div>
                <div class="col-md-3 mb-4 mb-md-0">
                    <div class="stat-card">
                        <i class="fas fa-users fa-3x mb-3"></i>
                        <h3 class="display-4 fw-bold"><%= stats.total_members || 0 %></h3>
                        <p class="lead">Community Members</p>
                    </div>
                </div>
                <div class="col-md-3 mb-4 mb-md-0">
                    <div class="stat-card">
                        <i class="fas fa-comments fa-3x mb-3"></i>
                        <h3 class="display-4 fw-bold">500+</h3>
                        <p class="lead">Barazas for Peace</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stat-card">
                        <i class="fas fa-map-marked-alt fa-3x mb-3"></i>
                        <h3 class="display-4 fw-bold">5M+</h3>
                        <p class="lead">Ugandans Reached</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Recent Projects / Initiatives -->
    <% if (recentProjects && recentProjects.length > 0) { %>
    <section class="py-5">
        <div class="container">
            <h2 class="text-center display-5 fw-bold mb-5">Our Initiatives</h2>
            <div class="row">
                <% recentProjects.forEach(project => { %>
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <span class="badge bg-<%= project.status === 'Active' ? 'success' : 'secondary' %> mb-2">
                                <%= project.status %>
                            </span>
                            <h5 class="card-title fw-bold"><%= project.title %></h5>
                            <p class="card-text"><%= project.description.substring(0, 120) %>...</p>
                            <p class="text-muted small">
                                <i class="fas fa-map-marker-alt me-1"></i><%= project.location %>
                                <span class="ms-3">
                                    <i class="fas fa-users me-1"></i><%= project.beneficiaries %> beneficiaries
                                </span>
                            </p>
                        </div>
                    </div>
                </div>
                <% }); %>
            </div>
            <div class="text-center mt-4">
                <a href="/impact" class="btn btn-primary btn-lg">View All Initiatives</a>
            </div>
        </div>
    </section>
    <% } %>

    <!-- Testimonials -->
    <section class="py-5 bg-light">
        <div class="container">
            <h2 class="text-center display-5 fw-bold mb-5">Stories from the Field</h2>
            <div class="row">
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <div class="mb-3">
                                <i class="fas fa-quote-left fa-2x text-primary"></i>
                            </div>
                            <p class="card-text">"Friends of Uganda has brought together people from different political backgrounds. Through the Barazas for Peace, we've learned that our shared love for Uganda is stronger than our political differences."</p>
                            <footer class="blockquote-footer mt-3">
                                <strong>Community Member</strong><br>
                                <small>Kampala, Uganda</small>
                            </footer>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <div class="mb-3">
                                <i class="fas fa-quote-left fa-2x text-primary"></i>
                            </div>
                            <p class="card-text">"As a Peace Ambassador, I've seen how dialogue can bridge divides. Friends of Uganda has given us the tools to promote peace and unity in our communities, transcending political boundaries."</p>
                            <footer class="blockquote-footer mt-3">
                                <strong>Peace Ambassador</strong><br>
                                <small>Uganda</small>
                            </footer>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <div class="mb-3">
                                <i class="fas fa-quote-left fa-2x text-primary"></i>
                            </div>
                            <p class="card-text">"Friends of Uganda reminds us that Uganda belongs to all of us. The national preservation campaigns have shown me that we can work together regardless of our political views to protect our country's future."</p>
                            <footer class="blockquote-footer mt-3">
                                <strong>Youth Volunteer</strong><br>
                                <small>First-Time Voter, Uganda</small>
                            </footer>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Partners & Sponsors -->
    <section class="py-5">
        <div class="container">
            <h2 class="text-center display-5 fw-bold mb-5">Our Partners & Sponsors</h2>
            <div class="row align-items-center text-center">
                <div class="col-md-3 col-6 mb-4">
                    <div class="partner-logo p-4">
                        <i class="fas fa-building fa-4x text-muted"></i>
                        <p class="mt-2">Partner 1</p>
                    </div>
                </div>
                <div class="col-md-3 col-6 mb-4">
                    <div class="partner-logo p-4">
                        <i class="fas fa-building fa-4x text-muted"></i>
                        <p class="mt-2">Partner 2</p>
                    </div>
                </div>
                <div class="col-md-3 col-6 mb-4">
                    <div class="partner-logo p-4">
                        <i class="fas fa-building fa-4x text-muted"></i>
                        <p class="mt-2">Partner 3</p>
                    </div>
                </div>
                <div class="col-md-3 col-6 mb-4">
                    <div class="partner-logo p-4">
                        <i class="fas fa-building fa-4x text-muted"></i>
                        <p class="mt-2">Partner 4</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

<%- include('partials/footer') %>

