<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title : 'Admin Dashboard - Friends of Uganda' %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <!-- Admin Navigation -->
    <nav class="navbar navbar-dark bg-brand-red">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold text-brand-yellow" href="/admin/dashboard">
                <i class="fas fa-hands-helping me-2"></i>Friends of Uganda - Admin
            </a>
            <div class="d-flex align-items-center">
                <span class="text-light me-3">
                    <i class="fas fa-user me-1"></i><%= user.username %> (<%= user.role %>)
                </span>
                <form id="logoutForm" method="POST" action="/admin/logout">
                    <button type="submit" class="btn btn-outline-light btn-sm">
                        <i class="fas fa-sign-out-alt me-1"></i>Logout
                    </button>
                </form>
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-3 col-lg-2 bg-light sidebar vh-100 p-3">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link <%= page === 'admin-dashboard' ? 'active' : '' %>" href="/admin/dashboard">
                            <i class="fas fa-tachometer-alt me-2"></i>Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= page === 'admin-users' ? 'active' : '' %>" href="/admin/users">
                            <i class="fas fa-users me-2"></i>Users
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= page === 'admin-projects' ? 'active' : '' %>" href="/admin/projects">
                            <i class="fas fa-project-diagram me-2"></i>Projects
                        </a>
                    </li>
                </ul>
            </nav>

            <!-- Main Content -->
            <main class="col-md-9 col-lg-10 ms-sm-auto px-md-4 py-4">
                <%- body %>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById('logoutForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const response = await fetch('/admin/logout', { method: 'POST' });
            const data = await response.json();
            if (data.success) {
                window.location.href = data.redirect || '/admin/login';
            }
        });
    </script>
</body>
</html>

