<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <!-- Admin Navigation -->
    <nav class="navbar navbar-dark bg-brand-red">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold text-brand-yellow" href="/admin/dashboard">
                <i class="fas fa-hands-helping me-2"></i>Friends of Uganda - Admin
            </a>
            <div class="d-flex align-items-center">
                <span class="text-light me-3">
                    <i class="fas fa-user me-1"></i><%= user.username %> (<%= user.role %>)
                </span>
                <form id="logoutForm" method="POST" action="/admin/logout">
                    <button type="submit" class="btn btn-outline-light btn-sm">
                        <i class="fas fa-sign-out-alt me-1"></i>Logout
                    </button>
                </form>
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-3 col-lg-2 bg-light sidebar vh-100 p-3">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link active" href="/admin/dashboard">
                            <i class="fas fa-tachometer-alt me-2"></i>Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/users">
                            <i class="fas fa-users me-2"></i>Users
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/projects">
                            <i class="fas fa-project-diagram me-2"></i>Projects
                        </a>
                    </li>
                </ul>
            </nav>

            <!-- Main Content -->
            <main class="col-md-9 col-lg-10 ms-sm-auto px-md-4 py-4">
                <h1 class="h2 mb-4">Dashboard</h1>

                <!-- Statistics Cards -->
                <div class="row mb-4">
                    <div class="col-md-3 mb-3">
                        <div class="card bg-brand-red text-white">
                            <div class="card-body">
                                <h5 class="card-title">Total Members</h5>
                                <h2 class="display-4"><%= userStats.total_users || 0 %></h2>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="card bg-brand-yellow text-brand-black">
                            <div class="card-body">
                                <h5 class="card-title">Peace Ambassadors</h5>
                                <h2 class="display-4"><%= userStats.peace_ambassadors || 0 %></h2>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="card bg-brand-grey text-white">
                            <div class="card-body">
                                <h5 class="card-title">Community Members</h5>
                                <h2 class="display-4"><%= userStats.community_members || 0 %></h2>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="card bg-brand-black text-white">
                            <div class="card-body">
                                <h5 class="card-title">Active Initiatives</h5>
                                <h2 class="display-4"><%= projectStats.active_projects || 0 %></h2>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Additional Statistics -->
                <div class="row mb-4">
                    <div class="col-md-4 mb-3">
                        <div class="card bg-brand-grey text-white">
                            <div class="card-body">
                                <h5 class="card-title">Partners</h5>
                                <h2 class="display-4"><%= userStats.partners || 0 %></h2>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="card bg-brand-black text-white">
                            <div class="card-body">
                                <h5 class="card-title">Volunteers</h5>
                                <h2 class="display-4"><%= userStats.volunteers || 0 %></h2>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="card bg-brand-red text-white">
                            <div class="card-body">
                                <h5 class="card-title">Sponsors</h5>
                                <h2 class="display-4"><%= userStats.sponsors || 0 %></h2>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Recent Registrations -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Recent Registrations</h5>
                    </div>
                    <div class="card-body">
                        <% if (recentUsers && recentUsers.length > 0) { %>
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Email</th>
                                            <th>Interest</th>
                                            <th>Registered</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% recentUsers.forEach(user => { %>
                                        <tr>
                                            <td><%= user.full_name %></td>
                                            <td><%= user.email %></td>
                                            <td><span class="badge bg-brand-red"><%= user.interest %></span></td>
                                            <td><%= new Date(user.created_at).toLocaleDateString() %></td>
                                        </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        <% } else { %>
                            <p class="text-muted">No recent registrations.</p>
                        <% } %>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById('logoutForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const response = await fetch('/admin/logout', { method: 'POST' });
            const data = await response.json();
            if (data.success) {
                window.location.href = data.redirect || '/admin/login';
            }
        });
    </script>
</body>
</html>

